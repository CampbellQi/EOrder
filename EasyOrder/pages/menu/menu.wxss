page{
  background-color: #f8f0e8;
  height: 100%;
  width: 100%;
}
.menu_classfiy{
  height: 40px;
  position: fixed;
  top:0;
  width: 100%;
  z-index: 1;
  white-space: nowrap;
}
.menu_classfiy button{
  display: inline-block;
  font-size: 14px;
  height: 40px;
  border-radius: 0px;
  border-width: 1px;
  line-height: 40px;
}
.menu_list{
  padding:38px 0 48px; 
}
.menu_classfiy_item{
  padding-left: 0px;
  height: 40px;
}
.menu_item{
  position: relative;
  margin-top: 10rpx;
}

.menu_item_price{
  position: absolute;
  bottom: 0px;
  left: 0px;
  font-size: 12px;
  text-shadow: -2px 2px 2px black;
  color: white;
}

.menu_item_name{
  position: absolute;
  left: 0;
  top: 0;
  width: 20px;
  color: white;
  font-size: 12px;
  text-shadow: -2px 2px 2px black;
}

.menu_item image{
  display: block;
}

.menu_item_count{
  display: flex;
  position: absolute;
  height: 16px;
  bottom: 0px;
  right: 1px;
  padding-bottom: 2px;
   background-color: rgba(0, 0, 0, 0.6); 
  
}

.menu_item_count image{
  width: 16px;
  height: 16px;
  border-style: solid;
  border-width: 1px;
  border-color: white;
}

.menu_item_count text{
  margin-left: 10px;
  margin-right: 10px;
  /* background-color: yellow; */
  border-width: 1px;
  border-color: white;
  padding-right: 2px;
  color: white;
  line-height: 16px;
}

.menu_clearing {
  width: 100%;
  height: 44px;
  background: black;
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
}

.menu_clearing_price{
  color: white;
  text-align: center;
  /* background-color: red; */
  line-height: 44px;
  margin-left: 5px;
}
.menu_clearing image{
  width: 30px;
  height: 30px;
  padding-top: 10px;
  padding-left: 5px;
}
.menu_clearing button{
  right: 0px;
  position: absolute;
  background-color: limegreen;
  color: white;
  border-radius: 0px;
}

.menu_clearing_count{
  color: white;
  background-color: red;
  height: 20px;
  line-height: 20px;
  width: 20px;
  border-radius: 10px;
  font-size: 12px; 
  text-align: center;
}