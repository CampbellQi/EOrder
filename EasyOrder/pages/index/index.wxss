page{
  background-color: #eeeeee;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  background-color: white;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.list_item{
  width: 100%;
  height: 40px;
  display: flex;
  background-color: white;
  line-height: 40px;
  justify-content:space-between;
  margin-top: 1px;
}

.list_item image{
  width: 20px;
  height: 20px;
  padding-top: 10px;
  padding-right: 5px;
}

.list_item text{
  padding-left: 5px;
}