
.order_list{
  padding-bottom: 40px;
}
.order_list_item{
  display: flex;
  left: 0px;
  margin-bottom: 5px;
  background-color: #eeeeee;
  height: 65px;
}

.order_list_item_info{
  margin-left: 5px;
  margin-top: 5px;
  width: calc(100% - 64px);
}

.order_list_item_info text{
  display: block;
  margin-bottom: 2px;
  
}
.order_list_item image{
  position: relative;
  width: 65px;
  height: 65px;
  flex-grow: 0;
  flex-shrink: 0;
}

.order_list_item text{
  font-size: 12px;
  color: gray;
}

.order_list_item view{ 
  height: 20px;
}


.order_item_handle{
  display: flex;
  justify-content:space-between;
}

.order_item_handle button{
  font-size: 12px;
  line-height: 20px;
  height: 20px;
  margin-right: 5px;
  display: inline-block;
}

