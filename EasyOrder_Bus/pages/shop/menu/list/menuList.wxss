page{
  width: 100%;
  height: 100%;
}
.list{
  width: 100%;
  height: calc(100% - 40px);
  display: flex;
}
.classify{
  height: 100%;
  width: 80px;
  background-color: white;
}
.classify button{
  height: 35px;
  line-height: 35px;
  font-size: 14px;
}
.menu_list{
  width: calc(100% - 80px);
  height: 100%;
  background-color: #eeeeee;
}
.menu_item{
  display: flex;
  margin-bottom: 1px;
  background: white;
}

.menu_item image{
  position: relative;
  width: 60px;
  height: 60px;
  flex-grow: 0;
  flex-shrink: 0;
}

.menu_item_info{
  margin-left: 2px;
}
.menu_item_info text{
  display: block;
  margin-bottom: 2px;
  
  font-size: 12px;
  color: gray;
}

.menu_item_info button{
  height: 20px;
  font-size: 12px;
  line-height: 20px;
  background-color: lightseagreen;
}